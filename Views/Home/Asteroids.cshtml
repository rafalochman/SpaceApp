@{
    ViewData["Title"] = "Asteroids";
}
@model IEnumerable<NASAapp.Models.Asteroid>

<h1>@ViewData["Title"]</h1>

<table class="table table-hover">
    <tr>
        <th>
            Name
        </th>
        <th>
            Min Estimated Diameter
        </th>
        <th>
            Max Estimated Diameter
        </th>
        <th>
            Hazardous
        </th>
        <th>
            Time
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EstimatedDiameterMin)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EstimatedDiameterMax)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Hazardous)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Time)
    </td>
    <td>
        @Html.ActionLink("Details", "Details", new { id = item.Id })
    </td>
</tr>
    }

</table>
